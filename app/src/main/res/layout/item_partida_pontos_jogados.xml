<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/item_partida_pontos_id"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/black"
            android:paddingEnd="4dp"
            android:text="1" />
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:orientation="horizontal">



        <TextView
            android:id="@+id/item_partida_pontos_time1_nome"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/black"
            android:text="Time 1:">

        </TextView>

        <TextView
            android:id="@+id/item_partida_pontos_time1_pontos"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/black"
            android:layout_marginStart="2dp"
            android:text="10">
        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/black"
            android:layout_marginStart="2dp"
            android:text="/" >
        </TextView>
        <TextView
            android:id="@+id/item_partida_pontos_time1_partidas"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/black"
            android:layout_marginStart="2dp"
            android:text="10">
        </TextView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/item_partida_pontos_time2_nome"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/black"
            android:paddingStart="2dp"
            android:text="Time 2:" >
        </TextView>
        <TextView
            android:id="@+id/item_partida_pontos_time2_pontos"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/black"
            android:layout_marginStart="2dp"
            android:text="9">
        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/black"
            android:layout_marginStart="2dp"
            android:text="/" >
        </TextView>
        <TextView
            android:id="@+id/item_partida_pontos_time2_partidas"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/black"
            android:layout_marginStart="2dp"
            android:text="9">
        </TextView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/item_partida_pontos_partida_ponto"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/black"
            android:layout_marginHorizontal="2dp"
            android:text="-12"></TextView>

        <TextView
            android:id="@+id/item_partida_pontos_jogador_nome"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/black"
            android:text="Juliano:">
        </TextView>

        <TextView
            android:id="@+id/item_partida_pontos_jogador_pontos"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/black"
            android:layout_marginStart="2dp"
            android:text="-12"></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="2dp"
            android:text="/" >
        </TextView>
        <TextView
            android:id="@+id/item_partida_pontos_jogador_partidas"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/black"
            android:layout_marginStart="2dp"
            android:text="-16"></TextView>


    </LinearLayout>

</LinearLayout>
    <View
        android:id="@+id/item_partida_pontos_linha"
        android:layout_width="match_parent"
        android:layout_height="1dp"
                android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="@android:color/black"
        android:visibility="gone"/>
</LinearLayout>